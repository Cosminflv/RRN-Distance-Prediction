{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Run main.py",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/main.py",
            "env": {
                "PYTHONPATH": "${workspaceFolder}/myenv/Lib/site-packages"
            },
            "console": "integratedTerminal"
        },
        {
            "name": "Python: Debug main.py with Arguments",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/main.py",
            "env": {
                "PYTHONPATH": "${workspaceFolder}/myenv/Lib/site-packages"
            },
            "args": [
                "arg1",
                "arg2"
            ],
            "console": "integratedTerminal"
        }
    ]
}